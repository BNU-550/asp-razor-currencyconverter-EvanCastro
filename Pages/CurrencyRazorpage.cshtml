@page
@model RazorCurrencyConverter.Pages.CurrencyConverterModel
@{
}

<div>
    <header class="text-center">
        <h1 class="display-4">Currency Converter GBP to USDT</h1>
        <h2>By Evan Castro</h2>
    </header>
    <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label for="mainCurrency">GBP (£)</label>
            <input type="number" required placeholder="0.00" asp-for="@Model.InputGBP" />
        </p>
        <p class="col-sm-2">
            <label for="finalCurrency">USDT($)</label>
            <input type="number" asp-for="@Model.OutputUSDT" value="@Model.OutputUSDT.ToString("0.00")" readonly />
        </p>
        <p class="col-sm-2">
            <button
                type="submit" class="btn btn-dark">
                Convert
            </button>
        </p>
        <p class="col-12">
            @ViewData["Message"]
        </p>
    </form>
</div>